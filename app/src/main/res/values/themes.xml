<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FooBarApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">#ECD9BF</item>
        <item name="android:textColor">#000</item>
</style>

<!-- Style for the main application theme. -->
    <style name="Theme.FooBarApp" parent="Base.Theme.FooBarApp" />
    <!-- Style for the hint text in TextInputLayout. -->
    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item> <!-- Set the text size for the hint -->
        <item name="android:textColor">@color/white</item> <!-- Set the text color for the hint -->
    </style>

    <!-- Style for the counter text in TextInputLayout. -->
    <style name="CounterText" parent="TextAppearance.Design.Counter">
        <item name="android:textSize">16sp</item> <!-- Set the text size for the counter -->
        <item name="android:textColor">@color/white</item> <!-- Set the text color for the counter -->
    </style>

    <!-- Style for the counter overflow text in TextInputLayout. -->
    <style name="CounterOverFlow" parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:textSize">16sp</item> <!-- Set the text size for the counter overflow -->
        <item name="android:textColor">@color/red</item> <!-- Set the text color for the counter overflow -->
    </style>
</resources>
